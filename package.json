{
  "name": "safecrab",
  "version": "0.3.0",
  "description": "Security scanner for Linux VPS environments - detect accidental service exposure",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "safecrab": "./dist/cli/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "security",
    "scanner",
    "vps",
    "cli",
    "exposure-detection"
  ],
  "author": "Isac Silva",
  "repository": {
    "type": "git",
    "url": "https://github.com/isacssw/safecrab.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "execa": "^8.0.1",
    "figures": "^6.1.0",
    "ora": "^8.0.1",
    "string-width": "^7.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^20.14.10",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  }
}
